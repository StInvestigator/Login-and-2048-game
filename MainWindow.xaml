    Text="Best Score  -" TextAlignment="Center"
                FontSize="50"
    TextWrapping="Wrap" />
        </materialDesign:Card>
        <TextBlock VerticalAlignment="Top"
    Text="0" TextAlignment="Center"   Background="RosyBrown"
  Foreground="DarkRed" Width="200" Name="TBcurScore"
                FontSize="50"
    TextWrapping="Wrap" Margin="-5,123,5,0" />
        <TextBlock VerticalAlignment="Top"
    Text="0" TextAlignment="Center"   Background="RosyBrown"
  Foreground="DarkRed" Width="200" Name="TBbestScore"
                FontSize="50"
    TextWrapping="Wrap" Margin="50,123,50,0" Grid.Column="1" />
        <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2" Margin="5"
  Background="Brown"
  UniformCornerRadius="45">
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2" Margin="15"
