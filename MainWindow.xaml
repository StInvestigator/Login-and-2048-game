        </Grid.ColumnDefinitions>
        <!--Top grid-->
        <materialDesign:Card Margin="5"
            Height="150"
  Background="RosyBrown"
  Foreground="DarkRed"
  UniformCornerRadius="45">
            <TextBlock VerticalAlignment="Center" Margin="10 0 10 0"
    Text="Total Score -" TextAlignment="Center"
                FontSize="50"
    TextWrapping="Wrap" />
        </materialDesign:Card>
        <materialDesign:Card Margin="5" Grid.Column="1"
            Height="150"
  Background="RosyBrown"
  Foreground="DarkRed"
  UniformCornerRadius="45">
